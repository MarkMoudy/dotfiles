[core]
	# Use custom `.gitignore` and `.gitattributes`
	excludesfile = ~/.gitignore

	# Make `git rebase` safer on macOS
	# More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
	trustctime = false

	# Enable parallel I/O for operations like "git diff".
	# See http://stackoverflow.com/q/18257622/276478
	preloadindex = true

	editor = code -n -w
	autocrlf = input

[color]
	# Use colors by default when the output is a terminal that supports them.
	ui = auto

[color.grep]
	filename = bold green
	match = black yellow

[diff]
	# Use more time to create better diffs. E.g. matching opening/closing braces
	# from neighbour functions.
	algorithm = patience

	# Tells Git to detect renames. If set to "true", it will enable basic
	# rename detection. If set to "copies", it will detect copies, as well.
	renames = copies

[merge]
	# When merging, add a list of merged commits to the autogenerated commit
	# message.
	log = true

[help]
	autocorrect = 1

[branch]
	autosetuprebase = always

[push]
	default = simple

# Enforce SSH over HTTPS as default remote
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/

# scope git user based on file paths. Useful when committing to multiple git
# remotes.
# Example:
####  file: ~/.extra-gitconfig-includes ####
# [include]
#     path = ~/.extra-gitconfig-work
# [includeIf "gitdir:<path-to-public-github-repos>"]
#     path = ~/.extra-gitconfig-personal
# [includeIf "gitdir:<some-other-public-github-path>"]
#     path = ~/.extra-gitconfig-personal
#
#### file: ~/.extra-gitconfig-<personal|work> ####
# [user]
#     name = <name>
#     email = <git-email>
[include]
    path = ~/.extra-gitconfig-includes